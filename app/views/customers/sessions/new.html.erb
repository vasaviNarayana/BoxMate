<!DOCTYPE html>
<html>
<head>
  <title>Customer Login</title>
  <%= csrf_meta_tags %>

  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin: 0;
      padding: 0;
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 80vh; /* Reduced height for better visibility */
    }

    .form-container {
      background-color: #fff;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      width: 60%; /* Adjusted width of the card */
      padding: 20px;
      margin-top: 20px; /* Reduced margin from the top */
    }

    .field {
      margin: 15px 0; /* Added more margin between label and input */
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: nowrap; /* Prevent wrapping */
    }

    label {
      font-weight: bold;
      display: inline-block;
      width: 30%; /* Adjusted the width of the label */
      text-align: right;
    }

    input[type="text"],
    input[type="password"] {
      width: 65%; /* Adjusted the width of the input */
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 3px;
      box-sizing: border-box; /* Include padding and border in the width */
      font-size: 14px; /* Increase the font size of the input */
      color: #333; /* Dark grey color for input text */
    }

    input::placeholder {
      font-size: 12px; /* Decrease the font size of the placeholder */
      font-style: italic; /* Make it italic */
      color: #aaa; /* Light grey color */
    }

    .actions {
      margin-top: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .btn-primary {
      background-color: #FFA500;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      margin-bottom: 10px;
    }

    .btn-primary:hover {
      background-color: #FF8C00;
    }

    .error-message {
      color: #d9534f;
      margin-top: 10px;
      text-align: center; /* Center align the error message */
    }

    .signup-button {
      margin-top: 20px; /* Added margin for the signup button */
    }

    .signup-button a {
      text-decoration: none;
    }

    .signup-button .btn-primary {
      background-color: #4CAF50; /* Green color for signup button */
    }

    .signup-button .btn-primary:hover {
      background-color: #45a049; /* Darker green on hover */
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="form-container">
      <% if flash[:danger] %>
        <div class="alert alert-danger">
          <%= flash[:danger] %>
        </div>
      <% end %>
      <h1>Customer Login</h1>
      <img src="<%= asset_path('customer-image.png') %>" alt="Customer Image" style="max-width: 100%; max-height: 150px;">
      <%= form_for @customer || Customer.new, url: customers_login_path, method: :post, data: { no_turbolink: true } do |f| %>
        <div class="field">
          <%= f.label :username %>
          <%= f.text_field :username, placeholder: 'Enter your username' %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, placeholder: 'Enter your password' %>
        </div>
        <div class="actions">
          <%= f.submit 'Log In', class: 'btn btn-primary' %>
          <div class="signup-button">
            New User? <%= link_to 'Signup', customers_signup_path %>
          </div>
        </div>
        <%= render 'shared/error_messages', object: @customer %>
      <% end %>
    </div>
  </div>
</body>
</html>
